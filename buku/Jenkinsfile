pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out source code...'
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                dir('buku') {
                    echo 'Building Buku Service...'
                    bat 'mvn clean package -DskipTests'
                }
            }
        }
        
        stage('Test') {
            steps {
                dir('buku') {
                    echo 'Running tests...'
                    bat 'mvn test'
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    echo 'Building Docker image...'
                    bat 'docker build -t buku-service:${BUILD_NUMBER} ./buku'
                    bat 'docker tag buku-service:${BUILD_NUMBER} buku-service:latest'
                }
            }
        }
        
        stage('Verify Image') {
            steps {
                echo 'Verifying Docker image...'
                bat 'docker images | findstr buku-service'
            }
        }
    }
    
    post {
        success {
            echo '✅ Buku Service pipeline completed successfully!'
        }
        failure {
            echo '❌ Buku Service pipeline failed!'
        }
    }
}
