pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out source code...'
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                dir('anggota') {
                    echo 'Building Anggota Service...'
                    sh 'mvn clean package -DskipTests'
                }
            }
        }
        
        stage('Test') {
            steps {
                dir('anggota') {
                    echo 'Running tests...'
                    sh 'mvn test'
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    echo 'Building Docker image...'
                    sh 'docker build -t anggota-service:${BUILD_NUMBER} ./anggota'
                    sh 'docker tag anggota-service:${BUILD_NUMBER} anggota-service:latest'
                }
            }
        }
        
        stage('Verify Image') {
            steps {
                echo 'Verifying Docker image...'
                sh 'docker images | grep anggota-service'
            }
        }
    }
    
    post {
        success {
            echo '✅ Anggota Service pipeline completed successfully!'
        }
        failure {
            echo '❌ Anggota Service pipeline failed!'
        }
    }
}
