pipeline {
    agent any
    
    tools {
        maven 'Maven 3.9'
        jdk 'JDK 21'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out source code...'
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                dir('email') {
                    echo 'Building Email Service...'
                    sh 'mvn clean package -DskipTests'
                }
            }
        }
        
        stage('Test') {
            steps {
                dir('email') {
                    echo 'Running tests...'
                    sh 'mvn test'
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    echo 'Building Docker image...'
                    sh 'docker build -t email-service:${BUILD_NUMBER} ./email'
                    sh 'docker tag email-service:${BUILD_NUMBER} email-service:latest'
                }
            }
        }
        
        stage('Verify Image') {
            steps {
                echo 'Verifying Docker image...'
                sh 'docker images | grep email-service'
            }
        }
    }
    
    post {
        success {
            echo '✅ Email Service pipeline completed successfully!'
        }
        failure {
            echo '❌ Email Service pipeline failed!'
        }
    }
}
