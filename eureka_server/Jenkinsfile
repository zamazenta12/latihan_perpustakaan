pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out source code...'
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                dir('eureka_server') {
                    echo 'Building Eureka Server...'
                    bat 'mvn clean package -DskipTests'
                }
            }
        }
        
        stage('Test') {
            steps {
                dir('eureka_server') {
                    echo 'Running tests...'
                    bat 'mvn test'
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    echo 'Building Docker image...'
                    bat 'docker build -t eureka-server:${BUILD_NUMBER} ./eureka_server'
                    bat 'docker tag eureka-server:${BUILD_NUMBER} eureka-server:latest'
                }
            }
        }
        
        stage('Verify Image') {
            steps {
                echo 'Verifying Docker image...'
                bat 'docker images | findstr eureka-server'
            }
        }
    }
    
    post {
        success {
            echo '✅ Eureka Server pipeline completed successfully!'
        }
        failure {
            echo '❌ Eureka Server pipeline failed!'
        }
    }
}
